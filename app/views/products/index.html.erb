<% @product.each do |product| %>
    <p>

        <%= product.name %>
        <%= ' ' %>
        <%= product.price %>
        <%= '円' %>

        <%= link_to '削除', product_path(product), method: :delete %>
        <%= link_to 'カートに追加する', new_cart_item_path(product_id: @product_id) %>
    </p>
<% end %>

<%= link_to '商品を追加する', new_product_path %>
